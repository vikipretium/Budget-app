<p style="color: green"><%= notice %></p>

<div class='categories--index'>
  <h1>Categories</h1>

  <div id="groups--list">
    <% @groups.each do |group| %>
      <div class='group-card'>
          <div class='group-icon'><%= image_tag group.icon, height: 50%></div>
            <p class='group--name'><%= group.name%></p>
            <p class='group--amount'><%= group.total_amount %></p>
          </div>
        </div>
        <p class='group--link'><%= link_to "See Transactions", group_entities_path(group_id: group.id%></p>
        <% end %>
  </div>

  <p class='newgroup--link'><%= link_to "Add New Category", new_group_path%></p>
  <%= button_to 'Log Out', destroy_user_session_path, method: :delete%>
</div>

